---
const { title = "Mi Portfolio", showStarfield = false } = Astro.props;
import FondoStar from "../components/FondoStar.astro";
import Navbar from "../components/Navbar.astro";
import SideNavbar from "../components/SideNavbar.astro";
import "../styles/global.css";
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
    <title>JhonEcheniqueDev</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16.png" />
    <link rel="shortcut icon" href="/favicon.ico" />

    <link
      href="https://fonts.googleapis.com/css2?family=Lalezar&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="min-h-screen text-white">
    <FondoStar count={400} />
    <Navbar />
    <SideNavbar />
    <script>
      document.documentElement.classList.add("js");
    </script>
  </body>
</html>
